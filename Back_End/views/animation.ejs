<%- include('partials/header'); -%>

    <form>
        <h2>Validate Animation</h2>
        <label for="role">Validate</label>
        <select name="validateStat" id="role">
            <option value="true">true</option>
            <option value="false" selected>false</option>
        </select>
        <button>Confirm</button>
    </form>

    <script>
        const form = document.querySelector('form')

        form.addEventListener('submit', async (e) => {
            e.preventDefault()

            // get the value
            const val = form.validateStat.value
            console.log(val)
            const validateStat = Boolean(val)

            try {
                const res = await fetch('/animations/validate/${animationID}', {
                    method: 'POST',
                    body: JSON.stringify({ validateStat   }),
                    headers: { 'Content-Type': 'application/json' }
                })
                const data = await res.json()
                console.log(data)
                if (data.errors) {
                    usernameError.textContent = data.errors.username
                    passwordError.textContent = data.errors.password
                    firstNameError.textContent = data.errors.firstName
                    lastNameError.textContent = data.errors.lastName
                }
                if (data.newUser) {
                    // location.assign('/')
                    console.log("Your process is successful")
                }
            } catch (err) {
                console.log(err)
            }
        })
    </script>

    <%- include('partials/footer'); -%>